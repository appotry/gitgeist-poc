    {{> reload}}
  </head>  
  <body>
    {{^hasFollowings}}
      <h1 class="title">Following nobody</h1>
      {{/hasFollowings}}
    
      {{#hasFollowings}}
        {{#gg.following}}
          <a href="/priv#{{email}}">{{email}}</a>
        {{/gg.following}}
      {{/hasFollowings}}
      <a href="/priv#local">Local posts</a>

      <hr />
      
      {{#gg.remotes}}
